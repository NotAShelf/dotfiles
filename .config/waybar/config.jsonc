            "4": "IV",
            "5": "V",
            "6": "VI",
            "7": "VII",
            "8": "VIII",
            "9": "IX",
            "10": "X",
            "11": "XI",
            "12": "XII"
        }
	},

    "hyprland/language": {
        "format": "{}",
        "format-tr": "TR"
    },

    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true
    },

    "gamemode": {
