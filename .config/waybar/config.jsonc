{
    // "mode": "dock",
    "layer": "top",
    "position": "top",
    "height": 27,
    "margin": 7,
    "fixed-center": true,
    
    // Choose the order of the modules
    "modules-left": ["wlr/workspaces", "custom/sep", "tray", "custom/updates"],
    "modules-center": ["clock", "sep", "custom/notification"],
    "modules-right": ["battery", "custom/sep_r", "gamemode", "custom/sep_r", "cpu", "custom/sep_r", "disk", "custom/sep_r", "memory", "custom/sep_r", "pulseaudio", "custom/sep_r", "network", "custom/sep_r", "custom/launcher"],

    // Custom Seperators
    "custom/sep_r": {
		    "format": " " // "ÓÇ≥"
    },
 
    
    "custom/sep": {
        "format": " | "
    },

    "custom/sep_l": {
		    "format": " " // "ÓÇ±"
    },
    
    "custom/empty": {
		    "format": "  "
    },
    // End Seperators
    
    "custom/notification": {
		"tooltip": true,
		"format": "{icon}",
		"format-icons": {
			"notification": "ÔÇ¢<span foreground='white'><sup>ÔëÑ</sup></span>",
			"none": "ÔÇ¢ ",
			"dnd-notification": "Ôá∑<span foreground='white'><sup>ÔëÑ</sup></span>",
			"dnd-none": "Ôá∑ "
		    },
	    "return-type": "json",
	    "exec-if": "which swaync-client",
	    "exec": "swaync-client -swb",
	    "on-click": "swaync-client -t -sw",
	    "on-click-middle": "swaync-client -d -sw",
        "on-click-right": "swaync-client -C",
	    "escape": true
	},
    
	"wlr/workspaces": {
