    	"format-calendar": "<span color='#ffffff'><b>{}</b></span>",
    	"format-calendar-weeks": "<span color='#ffffff'><b>W{:%V}</b></span>",
        "format-calendar-weekdays": "<span color='#ffffff'><b>{}</b></span>", 
		"interval": 10,
        "on-click-middle": "kalendar" 
     }, 
