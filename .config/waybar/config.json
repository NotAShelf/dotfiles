    "modules-center": ["clock"],
    "modules-right": ["cpu", "custom/sep_r", "disk", "custom/sep_r", "memory", "custom/sep_r", "pulseaudio", "custom/sep_r", "network", "custom/sep_r", "custom/notification", "custom/sep_r", "custom/launcher"],

    // Custom Seperators
