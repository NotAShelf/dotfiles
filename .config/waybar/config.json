        "interval": 60,
        "on-click": "kitty -e yay -Syu && notify-send 'The system has been updated' || notify-send 'System upgrade has failed' "
    },
    
    "custom/wallpaper":{
        "format":"ÔÄæ ",
        "on-click": "kill $(pidof wpaperd) ;  wpaperd"
    }
}

