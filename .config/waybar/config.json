            "6": "VI",
            "7": "VII",
            "8": "VIII",
            "9": "IX",
            "10": "X",
            "11": "XI",
            "12": "XII"
        }
	},

    "hyprland/language": {
        "format": "{}",
        "format-tr": "TR"
    },

  
    "keyboard-state": {
        "interval": 1,
        "numlock": false,
        "capslock": true,
        "format": "{icon}",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú "
        }
  },
  
  "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
