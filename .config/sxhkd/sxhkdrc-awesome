
# program launcher
super + d
 rofi -show drun

# make sxhkd reload its configuration files:
super + Escape 
	pkill -USR1 -x sxhkd ~/.config/sxhkd/sxhkdrc-awesome

super + s
  ~/.local/bin/rofiscripts/ssmenu

super + n 
  ~/.local/bin/wifimenu

super + x
  ~/.local/bin/rofiscripts/powermenu

# copy some stuff
super + shift + p
  xclip -sel c < ~/pa

XF86AudioPlay 
  playerctl play-pause

# volume
XF86AudioRaiseVolume
    ~/.local/bin/changevolume up

XF86AudioLowerVolume
    ~/.local/bin/changevolume down

XF86AudioMute
    ~/.local/bin/changevolume mute

XF86MonBrightnessDown
    ~/.local/bin/changebrightness down

XF86MonBrightnessUp
    ~/.local/bin/changebrightness up

